<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.otus.demo.sharedpref">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SharedPrefActivity"
            android:label="@string/shared_prefs_button_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".EncSharedPrefActivity"
            android:label="@string/enc_shared_prefs_button_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".IoFilesActivity"
            android:label="@string/io_files_button_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>